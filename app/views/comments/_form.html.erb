<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :body, t("comments.form.comment") %>
    <%= f.text_area :body, :rows => '5', :cols => '' %>
  </div>
  <div class="actions">
    <%= f.submit t("comments.form.submit"), :id => 'submit', :class => 'btn' %>
  </div>
<% end %>