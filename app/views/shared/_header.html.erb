<div class="span12">
  <%= link_to root_path do %>
    <h1>
      <span><%= raw(t("layouts.application.title")) %></span>
    </h1>
  <% end %>
  <%= form_tag posts_path, method: :get do %>
    <div class="field">
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag t("layouts.application.search_button"), name: nil, :class => 'btn' %>
    </div>
  <% end %>
</div>