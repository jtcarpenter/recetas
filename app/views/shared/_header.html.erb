<h1 class="span12"><%= link_to t("layouts.application.title"), root_path %></h1>
<%= form_tag posts_path, method: :get do %>
  <div class="field">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag t("layouts.application.search_button"), name: nil, :class => 'btn' %>
  </div>
<% end %>