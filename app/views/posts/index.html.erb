<h1>Entradas</h1>

<ol>
<% @posts.each do |post| %>
  <li>
    <h2><%= post.title %></h2>
    <p><%= post.updated_at %></p>
    <%= link_to 'Mostrar', post %>
    <% if user_signed_in? %>
    <%= link_to 'Editar', edit_post_path(post) %>
    <%= link_to 'Destruir', post, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %>
    <% end %>
  </li>
<% end %>
</ol>