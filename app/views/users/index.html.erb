<h1><%= t("users.index.title") %></h1>

<ol>
<% @users.each do |user| %>
  <li>
    <h2><%= user.email %></h2>
    <p><%= user.updated_at %></p>
    <% if current_user.try(:admin?) %>
      <% if true || current_user.access == 'super' %> 
      <%= link_to t("users.index.destroy"), user, method: :delete, data: { confirm: t("users.index.destroy_warning") } %>
      <% end %>
    <% end %>
  </li>
<% end %>
</ol>