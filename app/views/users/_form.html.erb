<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>  
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('users.form.errors', :count => @user.errors.count) %> <%= t("users.form.errors_message") %></h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if (current_page?(:controller => 'posts', :action => 'new')) %>
    <div class="field control-group">
      <div class="controls">
        <%= f.label(:admin, :class => 'checkbox') do %>
          <%= f.check_box :admin %>
          <%= t("users.form.admin") %>
        <% end %>
      </div>
    </div>
  <% elsif @user.admin %>
    <%= f.hidden_field :admin %>
  <% end %>
  <div class="field control-group">
    <%= f.label :email, t("users.form.email"), :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :placeholder => t("users.form.email") %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :name, t("users.form.name"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :placeholder => t("users.form.name") %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :password, t("users.form.password"), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :placeholder => t("users.form.password") %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :password_confirmation, t("users.form.password_confirmation"), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :placeholder => t("users.form.password_confirmation") %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit t("users.form.save"), :id => 'create_user', :class => 'btn btn-primary' %>
      <%= link_to t("users.edit.cancel"), users_path, :class => 'btn' %>
    </div>
  </div>
<% end %>