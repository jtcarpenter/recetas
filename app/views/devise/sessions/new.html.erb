<h2><%= t("devise.sessions.sign_in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, t("devise.sessions.email") %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, t("devise.sessions.password") %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, t("devise.sessions.remember_me") %></div>
  <% end -%>

  <div><%= f.submit t("devise.sessions.sign_in"), :id => 'sign_in', :class => 'btn' %></div>
<% end %>

<%= render "devise/shared/links" %>
