<h2><%= t("devise.sessions.sign_in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}, :builder => SmartLabelFormBuilder) do |f| %>

  <div class="field control-group">
    <%= f.label :email, t("devise.sessions.email"), :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :placeholder => t("devise.sessions.email"), :class => 'input-xlarge' %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :password, t("devise.sessions.password"), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :placeholder => t("devise.sessions.password"), :class => 'input-xlarge' %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="field form-inline control-group">
      <div class="controls">
        <%= f.label(:remember_me, :class => 'checkbox') do %>
          <%= f.check_box :remember_me %>
          <%= t("devise.sessions.remember_me") %>
        <% end %>
      </div>
    </div>
  <% end -%>

  <div class="actions control-group">
    <div class="controls">
      <%= f.submit t("devise.sessions.sign_in"), :id => 'sign_in', :class => 'btn' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
