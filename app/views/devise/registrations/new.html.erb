<h2><%= t("devise.registrations.edit.title") %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, t("devise.registrations.edit.email") %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, t("devise.registrations.edit.password") %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, t("devise.registrations.edit.password_confirmation") %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit t("devise.registrations.edit.sign_up") %></div>
<% end %>

<%= render "devise/shared/links" %>
